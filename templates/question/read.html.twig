{% extends 'base.html.twig' %}

{% block title %} - {{ question.title }} {% endblock %}

{% block body %}
    <h2 class="text-center">{{ question.title }}</h2>

    <div class="d-flex mb-3">
        <img style="width: 128px" class="rounded-circle" src="{{ question.user.portrait }}" alt="Portrait de l'auteur de la question: {{ question.user.name }}">
        <div class="d-flex">
            <p class="align-self-center m-3">{{ question.content }}</p>
            <p>{{question.createdAt|date("H:i d/m/Y", "Europe/Paris") }}</p>
        </div>
    </div>
    {% if app.user is not null %}
        {{ form_start(form) }}
        {{ form_end(form) }}
    {% endif %}

    {% for answer in question.answer|reverse %}
    
    <div class="border-bottom border-dark mt-3">
        <img style="width: 64px" class="rounded-circle" src="{{ answer.user.portrait }}" alt="Portrait de l'auteur de la rÃ©ponse: {{ answer.user.name }}"> 
        <p>{{answer.createdAt|date("H:i d/m/Y", "Europe/Paris") }}</p>
        <p>{{answer.content}}</p>
    </div>

    {% endfor %}
    

{% endblock %}
