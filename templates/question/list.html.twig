{% extends 'base.html.twig' %}

{% block title %}- Questions{% endblock %}

{% block body %}

<h1 class="display-5">Liste des Questions</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Titre</th>
            <th scope="col">Catégorie</th>
            <th scope="col">Auteur</th>
            {# <th scope="col">Aperçu</th> #}
            <th scope="col">Posté</th>
        </tr>
    </thead>
    <tbody>

    {% for question in questions %}
    <tr class="table">
        <td><a href="{{ path('question_read', {id: question.id}) }}">{{ question.title }}</a></td>
        <td>{{ question.category.name }}</td>
        <td scope="row">{{ question.user.name }}</td>
        {# <td>{{ question.content|slice(0,60) }} ...</td> #}
        <td>{{ question.createdAt|date("d/m/Y à H:i", "Europe/Paris") }}</td>
    </tr>
    {% endfor %}
    
    </tbody>
</table> 


{% endblock %}

{% block javascripts %}
<script src="{{ asset('assets/js/app.js') }}"></script>
{% endblock %}
